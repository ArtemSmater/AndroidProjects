<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/start_page">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnToStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/quick_start"
            android:textStyle="bold"
            android:textColor="@color/white_dark"
            android:textSize="20sp"
            android:fontFamily="@font/first_font"
            android:background="@drawable/btn_start_background"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/game_menu"
            android:textColor="@color/white_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/first_font"
            android:background="@drawable/btn_start_background" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>